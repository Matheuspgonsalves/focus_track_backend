    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@bugsnag/js": "^8.4.0",
    "@bugsnag/plugin-express": "^8.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^3.18.0",
    "joi": "^18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "typescript": "^5.7.3"
  },
  "private": true
}
